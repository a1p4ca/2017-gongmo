extends layout

append body
    .hero.is-medium#main-hero
        .hero-head
            include navbar
        .hero-body
            .section
                .container.has-text-centered
                    p.title.has-text-white 2017 창의 IT 공모전
                    p.subtitle.has-text-white 2017년 11월 1일 - 2017년 11월 30일
                    a.button.is-large#submit-link-btn(href='/submit') 신청하기
    section.section.has-text-centered#notice: .container
        h2.subtitle.is-size-2 공지사항
        each notice in notices
            .card.notice-card
                .card-content
                    p.title.is-size-2: a= notice.title
                    .content: p.is-size-4= notice.content
append script
    script(src='/index.bundle.js')
