{
  "name": "gongmo",
  "version": "1.0.0",
  "description": "창의 it 공모 제출 시스템",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start index.js --name=\"gongmo\" --log-date-format=\"YYYY-MM-DD HH:mm Z\"",
    "stop": "pm2 stop gongmo",
    "restart": "pm2 restart gongmo",
    "logs": "pm2 logs gongmo",
    "status": "pm2 show gongmo",
    "dev": "cross-env NODE_ENV=development pm2-dev index.js --name=\"gongmo-dev\"",
    "build-dev": "cross-env NODE_ENV=development webpack",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pre-commit": [
    "build"
  ],
  "author": "a1p4ca",
  "license": "MIT",
  "dependencies": {
