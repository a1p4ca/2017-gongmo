{
  "name": "gongmo",
  "version": "1.0.0",
  "description": "창의 it 공모 제출 시스템",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start index.js --name=\"gongmo\" --log-date-format=\"YYYY-MM-DD HH:mm Z\"",
    "stop": "pm2 stop gongmo",
    "restart": "pm2 restart gongmo",
    "logs": "pm2 logs gongmo",
    "status": "pm2 show gongmo",
    "dev": "cross-env NODE_ENV=production concurrently \"pm2-dev index.js --name 'gongmo-develop' \" \"npm run build-dev\"",
    "build-dev": "cross-env NODE_ENV=development webpack --hide-modules --watch",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "lint": "standard",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "standard": {
    "ignore": [
      "*.bundle.js"
    ]
  },
  "author": "a1p4ca",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.2",
    "bulma": "^0.5.1",
    "compression": "^1.7.0",
    "cookie-parser": "^1.4.3",
    "dimigo": "^1.0.2",
    "express": "^4.15.4",
    "express-flash": "0.0.2",
    "express-session": "^1.15.5",
    "helmet": "^3.8.1",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.0-rc.3",
    "serve-favicon": "^2.4.3",
    "session-file-store": "^1.1.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "node-sass": "^4.5.3",
    "pm2": "^2.6.1",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "style-loader": "^0.18.2",
    "webpack": "^3.5.5"
  }
}
