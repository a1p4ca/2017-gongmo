    "bulma": "^0.5.1",
    "compression": "^1.7.0",
    "express": "^4.15.4",
    "express-mysql-session": "^1.2.2",
    "express-session": "^1.15.5",
    "helmet": "^3.8.1",
    "morgan": "^1.8.2",
    "multer": "^1.3.0",
    "pug": "^2.0.0-rc.3",
    "serve-favicon": "^2.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "extract-text-webpack-plugin": "^3.0.0",
